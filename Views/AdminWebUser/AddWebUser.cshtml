@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model WTechCoreSample.Models.VM.WebUserVM


<form action="/AdminWebUser/AddWebUser" method="post">

    @Html.ValidationSummary()

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(q => q.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>SurName</label>
        @Html.TextBoxFor(q => q.SurName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(q => q.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Country</label>
        @Html.TextBoxFor(q => q.Country, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>EMail</label>
        @Html.TextBoxFor(q => q.EMail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(q => q.Address, new { @class = "form-control" })
    </div>

    <input type="submit" value="Add" />

</form>