@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model WTechCoreSample.Models.VM.AdminUserUpdatePasswordVM


<h1>Update Password</h1>

<div>
    @Html.ValidationSummary()
    <form action="/AdminProfile/UpdatePassword" method="post">
        <div class="form-group">
            <label>Old Password</label>
            @Html.PasswordFor(q => q.OldPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>New Password</label>
            @Html.PasswordFor(q => q.NewPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            @Html.PasswordFor(q => q.ConfirmNewPassword, new { @class = "form-control" })
        </div>

        <input class="btn btn-primary" type="submit" value="Submit" />

    </form>


</div>
