@model WTechCoreSample.Models.ORM.AdminUser

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Profile Update</h1>

<form action="/AdminProfile/Index" method="post">

    @Html.HiddenFor(q => q.Id)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(q => q.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Surname</label>
        @Html.TextBoxFor(q => q.Surname, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
